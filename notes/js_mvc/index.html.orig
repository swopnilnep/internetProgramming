<!DOCTYPE html>
    <head>
        <title>Playlist demo</title>
        <link rel="stylesheet" href="css/style.css" crossorigin="anonymous">
    </head>
    <body>
        <h1>Hello there!</h1>
        
        <form id="newSongForm">
            <input type="text" id="songTitle" required />
            <select id="songArtist">
            </select>
            <select id="songLabel">
            </select>
            <input type="text" id="songAlbum" required />
            <br />
            <button type="button" id=btn_add onclick="addSong()">Add a song</button>
            <button type="reset" id=btn_reset>RESET</button>
        </form>
        
        <div id="playlistDiv"></div>
        <button type="button" id=btn_clean onclick="cleanList()">Clean the list</button>

        <script type="text/javascript" src="js/model.js"></script>
        <script type="text/javascript" src="js/view.js"></script>
        <script type="text/javascript" src="js/controller.js"></script>
    </body>
</html>